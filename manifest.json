{
    "manifest_version": 2,
    "name": "WCA Regulations Finder",
    "description": "WCA Regulations and Guidelines are highlighted and show up when you hover a Regulation number.",
    "version": "0.0.1",
    "icons": {
        "128": "icon/icon-128.png"
    },
    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*", "file://*/*"],
        "js": ["lib/popper.min.js", "lib/tippy.min.js", "lib/marked.min.js", "js/content.js"],
        "css": ["css/content.css"]
    }],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": true,
        "run_at": "document_idle",
        "all_frames": true
    },
    "browser_action": {
        "default_icon": "icon/icon-128.png",
        "default_title": "WCA Regulations Finder"
    },
    "permissions": ["tabs", "http://*/*", "https://*/*", "file://*/*"]
}
